{
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "LS(*)",
      "Read(*)",
      "Grep(*)",
      "Glob(*)",
      "WebFetch(domain:*)",
      "Bash(git status *)",
      "Bash(git log *)",
      "Bash(git diff *)",
      "Bash(git show *)",
      "Bash(git branch *)",
      "Bash(git remote *)",
      "Bash(git tag *)",
      "Bash(git ls-files *)",
      "Bash(git rev-parse *)",
      "Bash(gh pr view *)",
      "Bash(gh pr list *)",
      "Bash(gh pr checks *)",
      "Bash(gh issue view *)",
      "Bash(gh issue list *)",
      "Bash(gh api *)",
      "Bash(gh repo view *)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(cat *)",
      "Bash(claude mcp *)",
      "Bash(afplay *)",
      "Bash(osascript *)"
    ],
    "deny": [
      "Read(**/.git/**)",
      "Write(**/.git/**)",
      "Edit(**/.git/**)",
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(kill *)",
      "Bash(killall *)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Write(**/.env)",
      "Edit(**/.env)",
      "Read(**/secrets.*)",
      "Write(**/secrets.*)",
      "Read(**/*.pem)",
      "Write(**/*.pem)",
      "Read(**/*.key)",
      "Write(**/*.key)",
      "Bash(rm *)",
      "Bash(rmdir *)",
      "Bash(mv *)",
      "Bash(cp *)",
      "Bash(chmod *)",
      "Bash(chown *)",
      "Bash(dd *)",
      "Bash(git push --force *)",
      "Bash(git push --force-with-lease *)",
      "Bash(git push -f *)",
      "Bash(git reset --hard *)",
      "Bash(git filter-branch *)",
      "Bash(git clean -f *)",
      "Bash(git *push --force *)",
      "Bash(git *push --force-with-lease *)",
      "Bash(git *push -f *)",
      "Bash(git *reset --hard *)",
      "Bash(git *filter-branch *)",
      "Bash(git *clean -f *)",
      "Bash(gh repo delete *)",
      "Bash(gh auth logout *)",
      "Bash(ls /)",
      "Bash(ls /etc/*)",
      "Glob(/*)",
      "Read(/etc/passwd)"
    ],
    "ask": [
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(git merge *)",
      "Bash(git rebase *)",
      "Bash(git stash *)",
      "Bash(git restore *)",
      "Bash(gh pr create *)",
      "Bash(gh repo clone *)",
      "Bash(gh repo fork *)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:api.github.com)",
      "Bash(wget *)",
      "Bash(curl *)",
      "Bash(pip install *)",
      "Bash(pip3 install *)",
      "Bash(python -m pip install *)",
      "Bash(npm install *)",
      "Bash(npx *)",
      "Bash(brew install *)",
      "Bash(apt install *)",
      "Bash(apt-get install *)",
      "Bash(gem install *)"
    ]
  },
  "extraKnownMarketplaces": {
    "KNT-claude-code-plugins": {
      "source": {
        "source": "github",
        "repo": "kentanakae/claude-code-plugins"
      }
    }
  },
  "enabledPlugins": {
    "core@KNT-claude-code-plugins": true
  },
  "language": "japanese",
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "16000",
    "MAX_THINKING_TOKENS": "16000",
    "ENABLE_TOOL_SEARCH": "1",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_BUG_COMMAND": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "0",
    "DISABLE_AUTOUPDATER": "0",
    "CLAUDE_CODE_ADDITIONAL_DIRECTORIES_CLAUDE_MD": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "in-process"
}
