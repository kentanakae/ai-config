{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Glob(*)",
      "Grep(*)",
      "LS(*)",
      "Read(*)",
      "WebFetch(domain:*)",
      "Bash(afplay *)",
      "Bash(claude mcp *)",
      "Bash(gh issue list *)",
      "Bash(gh issue view *)",
      "Bash(gh pr checks *)",
      "Bash(gh pr list *)",
      "Bash(gh pr view *)",
      "Bash(gh repo view *)",
      "Bash(osascript *)",
      "Bash(swift build *)",
      "Bash(swift package *)",
      "Bash(swift run *)",
      "Bash(swift test *)",
      "Bash(xcrun *)",
      "Bash(xcodebuild *)",
      "Bash(git checkout *)",
      "Bash(git switch *)"
    ],
    "deny": [
      "Edit(**/.env*)",
      "Edit(**/.git/**)",
      "Edit(~/.aws/**)",
      "Edit(~/.ssh/**)",
      "Glob(//*)",
      "Read(**/.env*)",
      "Read(**/.git/**)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/client_secret*)",
      "Read(**/secrets.*)",
      "Read(//etc/passwd)",
      "Read(~/.*)",
      "Read(~/.*/**)",
      "Read(~/Applications/**)",
      "Read(~/Downloads/**)",
      "Read(~/Library/**)",
      "Read(~/Movies/**)",
      "Read(~/Music/**)",
      "Read(~/Pictures/**)",
      "Read(~/Public/**)",
      "Read(~/Sites/**)",
      "Write(**/.env*)",
      "Write(**/.git/**)",
      "Write(**/*.key)",
      "Write(**/*.pem)",
      "Write(**/client_secret*)",
      "Write(**/secrets.*)",
      "Write(~/.aws/**)",
      "Write(~/.ssh/**)",
      "Bash(chown *)",
      "Bash(dd *)",
      "Bash(gh auth logout)",
      "Bash(gh auth logout *)",
      "Bash(gh repo delete *)",
      "Bash(git *clean -f)",
      "Bash(git *clean -f *)",
      "Bash(git *filter-branch)",
      "Bash(git *filter-branch *)",
      "Bash(git *push --force)",
      "Bash(git *push --force *)",
      "Bash(git *push --force-with-lease)",
      "Bash(git *push --force-with-lease *)",
      "Bash(git *push -f)",
      "Bash(git *push -f *)",
      "Bash(git *reset --hard)",
      "Bash(git *reset --hard *)",
      "Bash(git clean -f *)",
      "Bash(git filter-branch *)",
      "Bash(git push --force *)",
      "Bash(git push --force-with-lease *)",
      "Bash(git push -f *)",
      "Bash(git reset --hard *)",
      "Bash(kill *)",
      "Bash(killall *)",
      "Bash(ls /)",
      "Bash(ls /etc/*)",
      "Bash(su)",
      "Bash(su *)",
      "Bash(sudo *)"
    ],
    "ask": [
      "Bash(brew install *)",
      "Bash(chmod *)",
      "Bash(colima *)",
      "Bash(curl *)",
      "Bash(docker *)",
      "Bash(gh api *)",
      "Bash(gh pr create *)",
      "Bash(gh repo clone *)",
      "Bash(gh repo fork *)",
      "Bash(git merge *)",
      "Bash(git push *)",
      "Bash(git rebase *)",
      "Bash(git restore *)",
      "Bash(mv *)",
      "Bash(npm install *)",
      "Bash(npx *)",
      "Bash(open *)",
      "Bash(rm *)",
      "Bash(rmdir *)",
      "Bash(wget *)"
    ]
  },
  "extraKnownMarketplaces": {
    "KNT-claude-code-plugins": {
      "source": {
        "source": "github",
        "repo": "kentanakae/claude-code-plugins"
      }
    }
  },
  "enabledPlugins": {
    "core@KNT-claude-code-plugins": true
  },
  "language": "japanese",
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "16000",
    "MAX_THINKING_TOKENS": "16000",
    "ENABLE_TOOL_SEARCH": "1",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "CLAUDE_CODE_ADDITIONAL_DIRECTORIES_CLAUDE_MD": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "0"
  },
  "model": "opus",
  "effortLevel": "high",
  "plansDirectory": ".claude/plans",
  "respectGitignore": false,
  "showTurnDuration": false,
  "fastMode": false,
  "outputStyle": "porsha",
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "首をゆっくり右に倒して",
      "首をゆっくり左に倒して",
      "首をゆっくり一周まわして",
      "両肩をグッと上げてストン",
